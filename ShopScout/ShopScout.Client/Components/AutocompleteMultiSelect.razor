@typeparam TItem

<div class="autocomplete-multi">
    <div class="selected-items">
        @foreach (var item in SelectedItems)
        {
            <span class="selected-tag">
                @DisplayProperty(item)
                <button type="button" @onclick="() => RemoveItem(item)" class="tag-remove">×</button>
            </span>
        }
    </div>

    <div class="autocomplete-input-wrapper">
        <input type="text"
               class="form-control"
               value="@searchText"
               @oninput="OnInput"
               @onfocus="OnFocus"
               @onblur="OnBlur"
               placeholder="@Placeholder" />

        @if (showDropdown && (filteredItems.Any() || !string.IsNullOrWhiteSpace(searchText)))
        {
            <div class="autocomplete-dropdown">
                @foreach (var item in filteredItems)  // .Take(10)
                {
                    <div class="autocomplete-item" @onmousedown="() => SelectItem(item)" @onmousedown:preventDefault>
                        @DisplayProperty(item)
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(searchText) && !ItemExists(searchText) && CanCreateNew)
                {
                    <div class="autocomplete-item create-new" @onmousedown="CreateNewItem" @onmousedown:preventDefault>
                        <strong>+ Új létrehozása:</strong> @searchText
                    </div>
                }
                else if (!string.IsNullOrWhiteSpace(searchText) && ItemExists(searchText) && !filteredItems.Any())
                {
                    <div class="autocomplete-item already-exists">
                        "<strong>@searchText</strong>" már létezik
                    </div>
                }
            </div>
        }

        @if (CanCreateNew)
        {
            <button type="button"
                    class="btn-create-new"
                    @onclick="CreateNewItem"
                    disabled="@(string.IsNullOrWhiteSpace(searchText) || ItemExists(searchText))">
                + Új
            </button>
        }
    </div>
</div>

<style>
    .autocomplete-multi {
        width: 100%;
    }

    .selected-items {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 10px;
    }

    .selected-tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: #007bff;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 14px;
    }

    .tag-remove {
        background: none;
        border: none;
        color: white;
        font-size: 18px;
        line-height: 1;
        cursor: pointer;
        padding: 0;
        margin: 0;
    }

        .tag-remove:hover {
            color: #ffcccc;
        }

    .autocomplete-input-wrapper {
        position: relative;
        display: flex;
        gap: 8px;
    }

        .autocomplete-input-wrapper input {
            flex: 1;
        }

    .btn-create-new {
        background: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 8px 12px;
        cursor: pointer;
        font-size: 14px;
        white-space: nowrap;
    }

        .btn-create-new:hover:not(:disabled) {
            background: #218838;
        }

        .btn-create-new:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        max-height: 300px;
        overflow-y: auto;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-top: 4px;
    }

    .autocomplete-item {
        padding: 10px;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
    }

        .autocomplete-item:hover {
            background: #f8f9fa;
        }

        .autocomplete-item:last-child {
            border-bottom: none;
        }

        .autocomplete-item.create-new {
            background: #e7f5ff;
            color: #0066cc;
        }

            .autocomplete-item.create-new:hover {
                background: #d0ebff;
            }

        .autocomplete-item.already-exists {
            background: #fff3cd;
            color: #856404;
            cursor: default;
        }
</style>

@code {
    [Parameter]
    public List<TItem> Items { get; set; } = new();

    [Parameter]
    public ICollection<TItem> SelectedItems { get; set; } = new List<TItem>();

    [Parameter]
    public Func<TItem, string> DisplayProperty { get; set; } = item => item?.ToString() ?? "";

    [Parameter]
    public EventCallback<ICollection<TItem>> OnSelectionChanged { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Search...";

    [Parameter]
    public bool CanCreateNew { get; set; } = true;

    [Parameter]
    public Func<string, TItem>? CreateNewEntity { get; set; }

    [Parameter]
    public EventCallback<TItem> OnNewItemCreated { get; set; }

    private string searchText = "";
    private bool showDropdown = false;
    private List<TItem> filteredItems = new();

    protected override void OnParametersSet()
    {
        FilterItems();
    }

    private void OnInput(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        FilterItems();
        StateHasChanged();
    }

    private bool ItemExists(string name)
    {
        return Items.Any(item => DisplayProperty(item).Equals(name, StringComparison.OrdinalIgnoreCase));
    }

    private void FilterItems()
    {
        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredItems = Items.Where(item => !SelectedItems.Contains(item)).ToList();
        }
        else
        {
            filteredItems = Items.Where(item => !SelectedItems.Contains(item) &&
                                               DisplayProperty(item).Contains(searchText, StringComparison.OrdinalIgnoreCase))
                                 .OrderByDescending(item => DisplayProperty(item).Equals(searchText, StringComparison.OrdinalIgnoreCase))
                                 .ThenBy(item => DisplayProperty(item))
                                 .ToList();
        }
    }

    private void OnFocus()
    {
        showDropdown = true;
        FilterItems();
    }

    private async Task OnBlur()
    {
        await Task.Delay(300); // Delay to allow mousedown event to fire
        showDropdown = false;
    }

    private async Task SelectItem(TItem item)
    {
        SelectedItems.Add(item);
        searchText = "";
        FilterItems();
        await OnSelectionChanged.InvokeAsync(SelectedItems);
    }

    private async Task RemoveItem(TItem item)
    {
        SelectedItems.Remove(item);
        FilterItems();
        await OnSelectionChanged.InvokeAsync(SelectedItems);
    }

    private async Task CreateNewItem()
    {
        if (string.IsNullOrWhiteSpace(searchText) || CreateNewEntity == null)
            return;

        var newItem = CreateNewEntity(searchText);
        await OnNewItemCreated.InvokeAsync(newItem);

        // Add to items list and select it
        Items.Add(newItem);
        await SelectItem(newItem);
    }
}