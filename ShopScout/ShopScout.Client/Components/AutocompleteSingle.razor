@typeparam TItem

<div class="autocomplete-single">
    <div class="autocomplete-input-wrapper">
        <input type="text"
               class="form-control"
               value="@searchText"
               @oninput="OnInput"
               @onfocus="OnFocus"
               @onblur="OnBlur"
               placeholder="@Placeholder" />

        @if (showDropdown && filteredItems.Any())
        {
            <div class="autocomplete-dropdown">
                @foreach (var item in filteredItems.Take(10))
                {
                    <div class="autocomplete-item" @onmousedown="() => SelectItem(item)" @onmousedown:preventDefault>
                        @DisplayProperty(item)
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .autocomplete-single {
        width: 100%;
    }

    .autocomplete-input-wrapper {
        position: relative;
    }

    .autocomplete-dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        max-height: 300px;
        overflow-y: auto;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-top: 4px;
    }

    .autocomplete-item {
        padding: 10px;
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
    }

        .autocomplete-item:hover {
            background: #f8f9fa;
        }

        .autocomplete-item:last-child {
            border-bottom: none;
        }
</style>

@code {
    [Parameter]
    public List<TItem> Items { get; set; } = new();

    [Parameter]
    public Func<TItem, string> DisplayProperty { get; set; } = item => item?.ToString() ?? "";

    [Parameter]
    public EventCallback<TItem> OnItemSelected { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Search...";

    private string searchText = "";
    private bool showDropdown = false;
    private List<TItem> filteredItems = new();

    protected override void OnParametersSet()
    {
        FilterItems();
    }

    private void OnInput(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        FilterItems();
        StateHasChanged();
    }

    private void FilterItems()
    {
        if (string.IsNullOrWhiteSpace(searchText))
        {
            filteredItems = Items.ToList();
        }
        else
        {
            filteredItems = Items.Where(item => DisplayProperty(item).Contains(searchText, StringComparison.OrdinalIgnoreCase))
                                 .OrderByDescending(item => DisplayProperty(item).Equals(searchText, StringComparison.OrdinalIgnoreCase))
                                 .ThenBy(item => DisplayProperty(item))
                                 .ToList();
        }
    }

    private void OnFocus()
    {
        showDropdown = true;
        FilterItems();
    }

    private async Task OnBlur()
    {
        await Task.Delay(300); // Increased delay to allow mousedown to fire
        showDropdown = false;
    }

    private async Task SelectItem(TItem item)
    {
        searchText = DisplayProperty(item);
        showDropdown = false;
        await OnItemSelected.InvokeAsync(item);
    }
}