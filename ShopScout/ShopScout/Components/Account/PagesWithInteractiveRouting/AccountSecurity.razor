@code {
    private ApplicationUser user = default!;
    private bool isTwoFactorEnabled;
    private bool isGoogleAuthEnabled;

    private string message;

    protected override void OnInitialized()
    {
        NavBarService.SetNavBar("Fiókbiztonság", "/account/manage");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userByClaim = authState.User;

            if (userByClaim.Identity?.IsAuthenticated == true)
            {
                user = await UserManager.GetUserAsync(userByClaim);

                isTwoFactorEnabled = await UserManager.GetTwoFactorEnabledAsync(user);
                isGoogleAuthEnabled = (await UserManager.GetLoginsAsync(user)).Select(x => x.LoginProvider).Contains("Google");

                StateHasChanged();
            }
        }

    }

    private void Change2FA()
    {
        if (isTwoFactorEnabled)
        {
            NavigationManager.NavigateTo("/Account/Manage/Disable2fa");
        }
        else
        {
            NavigationManager.NavigateTo("/Account/Manage/Enable2fa");
        }
    }
}
