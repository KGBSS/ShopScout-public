@page "/Account/Manage/DeletePersonalData"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using ShopScout.Data
@using ShopScout.SharedLib.Models

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager
@inject ILogger<DeletePersonalData> Logger

<PageTitle>Fiók törlése</PageTitle>

<style>
    .deletion-container {
        max-width: 600px;
        width: 100%;
    }

    main {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .content {
        height: unset;
    }

    .card {
        background: white;
        border: 1px solid var(--red-100);
        border-radius: 0.5rem;
        padding: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .icon-circle {
        width: 4rem;
        height: 4rem;
        background: var(--red-100);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon-circle svg {
        width: 2rem;
        height: 2rem;
        color: var(--red-700);
    }

    .warning-title {
        color: var(--red-900);
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
    }

    .warning-text {
        color: var(--red-800);
        font-size: 1rem;
        text-align: center;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .form-label {
        color: var(--red-900);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid var(--red-200);
        border-radius: 0.375rem;
        padding: 0.625rem 0.75rem;
    }

    .form-control:focus {
        border-color: var(--red-600);
        box-shadow: 0 0 0 0.2rem rgba(220, 38, 38, 0.1);
    }

    .btn-delete {
        width: 100%;
        background-color: var(--red-600);
        color: white;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 1.5rem;
    }

    .btn-delete:hover {
        background-color: var(--red-700);
    }

    .btn-delete:active {
        background-color: var(--red-800);
    }

    .btn-cancel {
        width: 100%;
        background-color: white;
        color: var(--green-700);
        border: 1px solid var(--green-300);
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 0.75rem;
        text-decoration: none;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
    }

    .btn-cancel:hover {
        background-color: var(--green-50);
    }

    .info-box {
        background-color: var(--red-50);
        border: 1px solid var(--red-200);
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .info-box p {
        color: var(--red-800);
        font-size: 0.875rem;
        margin: 0;
        text-align: center;
    }
</style>

<StatusMessage Message="@message" />

<div class="deletion-container">
    <div class="card">
        <div class="icon-circle">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
        </div>

        <h1 class="warning-title">Delete Account</h1>

        <div class="info-box">
            <p>A törlés gombra kattintva a fiókodat véglegesen eltávolítod, és ez nem állítható vissza.</p>
        </div>

        <EditForm Model="Input" FormName="delete-user" OnValidSubmit="OnValidSubmitAsync" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert" />
            @if (requirePassword)
            {
                <div class="form-floating">
                    <InputText type="password" @bind-Value="Input.Password" id="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Írd be a jelszavad." />
                    <label for="Input.Password" class="form-label">Jelszó</label>
                    <ValidationMessage For="() => Input.Password" class="text-danger" />
                </div>
            }

            <button type="submit" class="btn-delete">
                Delete My Account Permanently
            </button>

            <a type="button" class="btn-cancel" href="/account/manage/personaldata">
                Cancel
            </a>
        </EditForm>
    </div>
</div>

@code {
    private string? message;
    private ApplicationUser user = default!;
    private bool requirePassword;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        NavBarService.SetNavBar("Fiók törlése", "/account/manage/personaldata");
        Input ??= new();
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        requirePassword = await UserManager.HasPasswordAsync(user);
    }

    private async Task OnValidSubmitAsync()
    {
        if (requirePassword && !await UserManager.CheckPasswordAsync(user, Input.Password))
        {
            message = "err: Hibás jelszó.";
            return;
        }

        var result = await UserManager.DeleteAsync(user);
        if (!result.Succeeded)
        {
            throw new InvalidOperationException("Unexpected error occurred deleting user.");
        }

        await SignInManager.SignOutAsync();

        var userId = await UserManager.GetUserIdAsync(user);
        Logger.LogInformation("User with ID '{UserId}' deleted themselves.", userId);

        RedirectManager.RedirectToCurrentPage();
    }

    private sealed class InputModel
    {
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";
    }
}
