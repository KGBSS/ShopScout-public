@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor

<PageTitle>Personal Data</PageTitle>

<div class="content-wrapper">
    <!-- Download Your Data -->
    <div class="card card-green">
        <div class="section-header">
            <div class="icon-circle icon-m icon-circle-green">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
            </div>
            <div class="flex-grow-1">
                <h3 class="section-title">Adatok letöltése</h3>
                <p class="section-description">Kérj egy másolatot a személyes adataidról hordozható formátumban</p>
            </div>
        </div>

        <div class="info-box">
            <ul>
                <li>
                    <span class="bullet">•</span>
                    <span>Profil információ</span>
                </li>
                <li>
                    <span class="bullet">•</span>
                    <span>Fiók beállítások</span>
                </li>
            </ul>
        </div>

        
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn-download" type="submit">
                <svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Letöltés
            </button>
        </form>
    </div>

    <!-- Delete Your Account -->
    <div class="card card-red">
        <div class="section-header">
            <div class="icon-circle icon-m icon-circle-red">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </div>
            <div class="flex-grow-1">
                <h3 class="section-title section-title-red">Fiók törlése</h3>
                <p class="section-description section-description-red">A fiókod és az összes kapcsolódó adatod végleges törlése</p>
            </div>
        </div>

        <div class="info-box info-box-red">
            <p class="warning-text">Ez a művelet nem vonható vissza. Ez a következőket fogja tenni:</p>
            <ul>
                <li>
                    <span class="bullet bullet-red">•</span>
                    <span>Minden külső bejelentkezés leválasztása</span>
                </li>
                <li>
                    <span class="bullet bullet-red">•</span>
                    <span>A profilod véglegesen törlődik</span>
                </li>
                <li>
                    <span class="bullet bullet-red">•</span>
                    <span>Minden személyes adatod azonnal törlésre kerül</span>
                </li>
                <li>
                    <span class="bullet bullet-red">•</span>
                    <span>Néhány szükséges adatot anonimizálunk, így azok továbbra is elérhetők lesznek más felhasználók számára, de semmilyen módon nem lesznek köthetők hozzád</span>
                </li>
            </ul>
        </div>

        <a class="btn-delete" href="Account/Manage/DeletePersonalData">
            <svg class="icon-sm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                <line x1="10" y1="11" x2="10" y2="17"></line>
                <line x1="14" y1="11" x2="14" y2="17"></line>
            </svg>
            Tovább a törlés jóváhagyásához
        </a>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        NavBarService.SetNavBar("Személyes adatok", "/account/manage");
    }
}