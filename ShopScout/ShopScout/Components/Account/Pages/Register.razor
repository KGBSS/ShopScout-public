            </div>

            <StatusMessage Message="@errorMessage" />
            <EditForm Model="Input" method="post" OnValidSubmit="RegisterUser" FormName="register" class="login-form">
                <div class="form-group">
                    <label for="Input.Email">Email</label>
                    <InputText @bind-Value="Input.Email" class="email-inp" id="Input.Email" autocomplete="username" aria-required="true" placeholder="pelda@email.com" />
                    <ValidationMessage For="() => Input.Email" class="text-danger" />
                </div>

                <div class="form-group">
                    <label for="Input.Password">Jelszó</label>
                    <InputText type="password" @bind-Value="Input.Password" id="Input.Password" class="pass-inp" autocomplete="new-password" aria-required="true" placeholder="Válassz egy erős jelszót" />
                    <ValidationMessage For="() => Input.Password" class="text-danger" />
                </div>

                <div class="form-group">
                    <label for="Input.ConfirmPassword">Jelszó megerősítése</label>
                    <InputText type="password" @bind-Value="Input.ConfirmPassword" id="Input.ConfirmPassword" class="pass-inp" autocomplete="new-password" aria-required="true" placeholder="Írd be újra a jelszavad" />
                    <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger" />
