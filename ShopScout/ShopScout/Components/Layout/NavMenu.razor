@code {
    private string? currentUrl;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private async Task ClickedOnSearch()
    {
        string searchTerm = await LocalStorageService!.GetValue<string>("prevUrl", "");
        Console.WriteLine($"\n\nThe search term is: {searchTerm}");
        if(searchTerm != "")
        {
            NavigationManager.NavigateTo($"/search/{searchTerm}", true);
            LocalStorageService!.SetValue("prevUrl", "");
        }
    }
}

