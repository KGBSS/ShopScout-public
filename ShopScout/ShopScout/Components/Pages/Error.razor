@page "/Error/{code?}"
@using ShopScout.Client.Layout
@layout EmptyLayout


@code {
    [Parameter]
    public string? Code { get; set; }

    private ErrorInfo GetErrorInfo()
    {
        return Code switch
        {
            "400" => new ErrorInfo
            {
                Code = "400",
                Title = "Hibás kérés",
                Description = "A kérés nem dolgozható fel, mert hibás vagy érvénytelen adatokat tartalmaz.",
                Icon = "alert-circle"
            },
            "401" => new ErrorInfo
            {
                Code = "401",
                Title = "Hitelesítés szükséges",
                Description = "Az oldal megtekintéséhez be kell jelentkezned.",
                Icon = "lock"
            },
            "403" => new ErrorInfo
            {
                Code = "403",
                Title = "Hozzáférés megtagadva",
                Description = "Nincs jogosultságod az oldal megtekintéséhez.",
                Icon = "shield-off"
            },
            "404" => new ErrorInfo
            {
                Code = "404",
                Title = "Az oldal nem található",
                Description = "Sajnáljuk, de a keresett oldal nem létezik vagy át lett helyezve.",
                Icon = "file-question"
            },
            "500" => new ErrorInfo
            {
                Code = "500",
                Title = "Szerverhiba",
                Description = "Váratlan hiba történt a szerveren. Kérjük, próbáld újra később.",
                Icon = "server-crash"
            },
            "503" => new ErrorInfo
            {
                Code = "503",
                Title = "A szolgáltatás átmenetileg nem érhető el",
                Description = "Az oldal jelenleg karbantartás alatt áll. Hamarosan visszatérünk!",
                Icon = "wrench"
            },
            _ => new ErrorInfo
            {
                Code = Code ?? "Hiba",
                Title = "Váratlan hiba történt",
                Description = "Sajnáljuk, de valami nem sikerült. Kérjük, próbáld újra később.",
                Icon = "alert-triangle"
            }
        };
    }

    private class ErrorInfo
    {
        public string Code { get; set; } = "";
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Icon { get; set; } = "";
    }
}

@{
    var error = GetErrorInfo();
}

<PageTitle>@error.Title - @error.Code</PageTitle>

<div class="page-container">
    <div class="content-wrapper">
        <div class="error-page-content">
            <div class="error-icon-wrapper">
                @switch (error.Icon)
                {
                    case "alert-circle":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16"></line>
                        </svg>
                        break;
                    case "lock":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                        break;
                    case "shield-off":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
                            <line x1="1" y1="1" x2="23" y2="23"></line>
                        </svg>
                        break;
                    case "file-question":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                            <path d="M9.5 12a2.5 2.5 0 0 1 5 0c0 1-1 1.5-2.5 2"></path>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                        break;
                    case "server-crash":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect>
                            <rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect>
                            <line x1="6" y1="6" x2="6.01" y2="6"></line>
                            <line x1="6" y1="18" x2="6.01" y2="18"></line>
                        </svg>
                        break;
                    case "wrench":
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                        </svg>
                        break;
                    default:
                        <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                            <line x1="12" y1="9" x2="12" y2="13"></line>
                            <line x1="12" y1="17" x2="12.01" y2="17"></line>
                        </svg>
                        break;
                }
            </div>

            <div class="error-code">@error.Code</div>
            <h1 class="error-title">@error.Title</h1>
            <p class="error-description">@error.Description</p>

            <div class="error-actions">
                @if (error.Code == "401")
                {
                    <a href="/Account/Login" class="btn-error-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                            <polyline points="10 17 15 12 10 7"></polyline>
                            <line x1="15" y1="12" x2="3" y2="12"></line>
                        </svg>
                        Bejelentkezés
                    </a>
                }
                else
                {
                    <a href="/" class="btn-error-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        Vissza a kezdőlapra
                    </a>
                }
                <button onclick="history.back()" class="btn-error-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    Vissza az előző oldalra
                </button>
            </div>

            @if (error.Code == "404")
            {
                <div class="error-help-card">
                    <p class="error-help-title">Segíthetünk?</p>
                    <ul class="error-help-list">
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Ellenőrizd az URL címet, nincs-e benne elírás</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Próbáld meg a keresést a kezdőlapról</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Ha úgy gondolod, hogy ez egy hiba, lépj kapcsolatba az ügyfélszolgálattal</span>
                        </li>
                    </ul>
                </div>
            }
            else if (error.Code == "500" || error.Code == "503")
            {
                <div class="error-help-card">
                    <p class="error-help-title">Mit tehetsz?</p>
                    <ul class="error-help-list">
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Várj néhány percet és próbáld újra</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Frissítsd az oldalt</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Ha a probléma fennáll, lépj kapcsolatba az ügyfélszolgálattal</span>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>